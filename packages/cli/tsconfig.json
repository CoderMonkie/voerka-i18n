{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "bundler",
    "importHelpers": true, 
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"], 
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules" 
  ],
  "ts-node": {
    "esm": true
  }
}
